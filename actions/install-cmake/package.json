{
  "name": "@chuckatkins/install-cmake",
  "description": "GitHub Action to install CMake and Ninja into the hosted tool cache",
  "author": "Chuck Atkins <chuckatkins@gmail.com",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "main": "dist/index.js",
  "devDependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.0",
    "@actions/tool-cache": "^2.0.2"
  },
  "scripts": {
    "clean": "../../scripts/npm/clean.sh",
    "distclean": "npm run clean && ../../scripts/npm/distclean.sh",
    "build": "tsc --project tsconfig.json",
    "package": "ncc build src/index.ts --out dist",
    "lint": "../../scripts/npm/lint.sh .",
    "lint:fix": "../../scripts/npm/lint.sh --fix .",
    "format": "../../scripts/npm/format.sh --check .",
    "format:fix": "../../scripts/npm/format.sh --write .",
    "test": "../../scripts/npm/test.sh",
    "test:watch": "../../scripts/npm/test.sh --watch"
  }
}
