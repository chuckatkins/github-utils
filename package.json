{
  "name": "@chuckatkins/github-utils",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "actions/changed-files",
    "actions/install-cmake",
    "actions/ctest-build-summary"
  ],
  "scripts": {
    "clean": "npm run clean --workspaces && ./scripts/npm/clean.sh",
    "distclean": "npm run distclean --workspaces && ./scripts/npm/distclean.sh",
    "build": "npm run build --workspaces",
    "package": "npm run package --workspaces",
    "lint": "npm run lint --workspaces",
    "lint:fix": "npm run lint:fix --workspaces",
    "format": "npm run format --workspaces",
    "format:fix": "npm run format:fix --workspaces"
  },
  "devDependencies": {
    "@types/node": "^22.15.2",
    "@typescript-eslint/eslint-plugin": "^8.31.0",
    "@typescript-eslint/parser": "^8.31.0",
    "@vercel/ncc": "^0.38.3",
    "eslint": "^9.25.1",
    "eslint-plugin-github": "^6.0.0",
    "eslint-plugin-jsdoc": "^50.6.11",
    "eslint-plugin-prettier": "^5.2.6",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3"
  }
}
