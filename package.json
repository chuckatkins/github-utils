{
  "name": "github-utils",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "clean": "npm run clean:all",
    "build": "npm run build:all",
    "package": "npm run package:all",
    
    "clean:changed-files": "rm -rf actions/changed-files/{lib,dist}",
    "build:changed-files": "tsc --project actions/changed-files",
    "package:changed-files": "ncc build -s actions/changed-files/src/index.ts --out actions/changed-files/dist",

    "clean:install-cmake": "rm -rf actions/install-cmake/{lib,dist}",
    "build:install-cmake": "tsc --project actions/install-cmake",
    "package:install-cmake": "ncc build -s actions/install-cmake/src/index.ts --out actions/install-cmake/dist",

    "clean:all": "npm run clean:changed-files && npm run clean:install-cmake",
    "build:all": "npm run build:changed-files && npm run build:install-cmake",
    "package:all": "npm run package:changed-files && npm run package:install-cmake",

    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write ."
  },
  "devDependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.0",
    "@actions/exec": "^1.1.1",
    "@actions/tool-cache": "^2.0.2",
    "js-yaml": "^4.1.0",
    "@types/js-yaml": "^4.0.9",

    "@vercel/ncc": "^0.38.3",
    "typescript": "^5.8.3",
    "@types/node": "^22.15.2",

    "eslint": "^9.25.1",
    "prettier": "^3.5.3",
    "@typescript-eslint/parser": "^8.31.0",
    "@typescript-eslint/eslint-plugin": "^8.31.0",
    "eslint-plugin-github": "^6.0.0",
    "eslint-plugin-jsdoc": "^50.6.11",
    "eslint-plugin-prettier": "^5.2.6"
  }
}
