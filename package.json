{
  "name": "@chuckatkins/github-utils",
  "description": "A collection of utility GitHub Actions",
  "author": "Chuck Atkins <chuckatkins@gmail.com>",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "workspaces": [
    "actions/changed-files",
    "actions/install-cmake",
    "actions/ctest-build-summary"
  ],
  "scripts": {
    "update": "npx ncu -u -ws",
    "clean": "npm run clean --workspaces && ./scripts/npm/clean.sh",
    "distclean": "npm run distclean --workspaces && ./scripts/npm/distclean.sh",
    "build": "npm run build --workspaces",
    "package": "npm run package --workspaces",
    "lint": "npm run lint --workspaces",
    "lint:fix": "npm run lint:fix --workspaces",
    "format": "npm run format --workspaces",
    "format:fix": "npm run format:fix --workspaces",
    "test": "npm run test --workspaces",
    "test:watch": "npm run test:watch --workspaces"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.3",
    "@typescript-eslint/eslint-plugin": "^8.31.0",
    "@typescript-eslint/parser": "^8.31.0",
    "@vercel/ncc": "^0.38.3",
    "eslint": "^9.25.1",
    "eslint-config-prettier": "^10.1.2",
    "eslint-import-resolver-typescript": "^4.3.4",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-github": "^6.0.0",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-prettier": "^5.2.6",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "prettier-eslint": "^16.4.1",
    "ts-jest": "^29.3.2",
    "ts-jest-resolver": "^2.0.1",
    "typescript": "^5.8.3"
  }
}
